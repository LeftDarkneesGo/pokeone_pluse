<UserControl x:Class="pokeone_plus.ChatPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pokeone_plus"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <RichTextBox Name="ChatBox"
                 IsReadOnly="True"                 
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 Background="#1E1E1E" BorderBrush="#FF525556" Foreground="#F1F1F1" SelectionBrush="#FF08B9F4"
                 IsDocumentEnabled="True"
                 TextChanged="ChatBox_TextChanged" >
            <RichTextBox.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </RichTextBox.Resources>
        </RichTextBox>
    </Grid>
</UserControl>
