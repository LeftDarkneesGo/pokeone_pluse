<UserControl x:Class="pokeone_plus.ButtonTabHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pokeone_plus"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" BorderBrush="{x:Null}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Label x:Name="TabName" FontSize="13.333" Grid.Column="0" Padding="2" BorderBrush="{x:Null}" Foreground="#F1F1F1"/>
        <Button Content="X" x:Name="ButtonClose" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" BorderBrush="{x:Null}" 
                  FontWeight="Bold" FontSize="11" Width="15"  Grid.Column="1" Click="ButtonClose_Click" Foreground="#F1F1F1">
            <Button.ToolTip>
                <ToolTip Background="#1E1E1E">
                    <TextBlock Background="#1E1E1E" Foreground="#F1F1F1" Text="Close"/>
                </ToolTip>
            </Button.ToolTip>
        </Button>
    </Grid>
</UserControl>
